<h1><strong>Editing Book</strong></h1>
<% if @Book.errors.any? %>
  <div class="error_box">
    <h2><%= @Book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @Book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @Book, url: update_book_path(@Book.id), method: :patch do |f| %>
  <div class="field">
  <% if @Book.errors.any? && @Book.title.empty? %>
    <div class="error_field">
      <label for="book_title">Title</label>
    </div>
    <div class="error_field">
      <%= f.text_field :title, id:"book_title" %>
    </div>
  <% else %>
    <label for="book_title">Title</label>
    <%= f.text_field :title, id:"book_title" %>
  <% end %>
  </div>
  <div class="field">
  <% if @Book.errors.any? && @Book.body.empty? %>
    <div class="error_field">
      <label for="book_body">Body</label>
    </div>
    <div class="error_field">
      <%= f.text_area :body, id:"book_body" %>
    </div>
  <% else %>
    <label for="book_body">Body</label>
    <%= f.text_area :body, id:"book_body" %>
  <% end %>
  </div>
  <div class="field">
    <%= f.submit "Update Book" %>
  </div>
  <%= link_to "Show", book_path(@Book.id) %> | <%= link_to "Back", "/books"%>
<% end %>
