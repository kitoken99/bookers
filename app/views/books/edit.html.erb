<h1><strong>Editing Book</strong></h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, id: "book_title"%> 
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body, id: "book_body" %>
  </div>
  <div class="field">
    <%= f.submit "Update Boook" %>
  </div>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books"%>
<% end %>
